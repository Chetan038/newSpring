<div class="post-container">

  <!-- User Status Management - Positioned Higher -->
  <div class="user-status-container">
    <h2>User Status Management</h2>
    <div *ngFor="let user of users" class="user-status-card">
      <p>{{ user.name }} - Status: {{ user.status }}</p>
      <button (click)="toggleStatus(user)">
        {{ user.status === 'ACTIVE' ? 'Deactivate' : 'Activate' }}
      </button>
    </div>
  </div>

  <div class="post-row">
    <ng-container *ngFor="let post of posts">
      <div class="post-card" *ngIf="post.status === 'ACTIVE' || loggedIn">
        <div class="post-header">
          <p class="posted-info">
            <strong>{{ post.posted_by }}</strong> | {{ post.status }} {{ post.posted_at }} (ID: {{ post.post_id }})
          </p>
          <h3>{{ post.post_header }}</h3>
        </div>
        <div class="post-content">
          <p>{{ post.post_content }}</p>
          <button *ngIf="loggedIn" class="btn-0">Activate</button>
          <button *ngIf="loggedIn" routerLink="/dashboard" class="btn-1">Edit Post</button>
          <button *ngIf="loggedIn" class="btn-2" (click)="deletePost(post.post_id)">Delete</button>
        </div>
      </div>
    </ng-container>
  </div>

</div>



