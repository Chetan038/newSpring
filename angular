/* General Table Styling */
body{
    background: linear-gradient(135deg, #ffffff, #b38b07); 
}

table {
    width: 90%;
    margin: 20px auto;
    border-collapse: collapse;
    font-family: "Poppins", sans-serif;
    background: linear-gradient(135deg, #e1d39d, #e8d046);
    color: rgb(0, 0, 0);
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
    border-radius: 10px;
    overflow: hidden;
  }
  
  /* Table Headers */
  th {
    background:  #efbd16;
    padding: 12px;
    text-align: left;
    font-size: 18px;
    letter-spacing: 1px;
    text-transform: uppercase;
  }
  
  /* Table Data */
  td {
    padding: 12px;
    font-size: 16px;
    border-bottom: 1px solid rgba(255, 255, 255, 0.2);
  }
  
  /* Alternating Row Colors */
  tbody tr:nth-child(odd) {
    background: rgba(255, 255, 255, 0.1);
  }
  
  tbody tr:nth-child(even) {
    background: rgba(255, 255, 255, 0.2);
  }
  
  /* Hover Effect */
  tbody tr:hover {
    background: rgba(255, 255, 255, 0.3);
    transform: scale(1.02);
    transition: 0.3s ease-in-out;
    cursor: pointer;
  }
  
  /* Responsive Design */
  @media (max-width: 768px) {
    table {
      width: 100%;
    }
    th, td {
      font-size: 14px;
      padding: 10px;
    }
  }
  
      
  button {
    margin-right: 5px;
    padding: 5px 10px;
    cursor: pointer;
    border-radius: 3px;
  }
  
  button:first-child {
    background-color: #ffc123a3;
    color: rgb(0, 0, 0);
    border: none;
    border-radius: 3px;
  }
  
  button:last-child {
    background-color: #f44336;
    color: white;
    border: none;
    border-radius: 3px;
  }


  
