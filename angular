<div class="post-container">
  <div class="post-row">
    <ng-container *ngFor="let post of posts">
      <div class="post-card" *ngIf="post.status === 'ACTIVE' || loggedIn">
        <!-- Heading Section -->
        <div class="post-header">
          <h3>{{ post.post_header }}</h3>
        </div>

        <!-- Posted Info Section -->
        <div class="post-info">
          <div class="posted-by"><strong>By:</strong> {{ post.posted_by }}</div>
          <div class="post-status"><strong>Status:</strong> {{ post.status }}</div>
          <div class="post-time"><strong>Posted:</strong> {{ post.posted_at | date:'MMM d, y hh:mm a' }}</div>
        </div>

        <!-- Content Section -->
        <div class="post-content">
          <p>{{ post.post_content }}</p>
          <button class="btn-1" *ngIf="loggedIn" (click)="togglestatus(post)">
            {{ post.status === 'ACTIVE' ? 'Deactivate' : 'Activate' }}
          </button>
          <button *ngIf="loggedIn" routerLink="/dashboard" class="btn-1">Edit Post</button>
          <button *ngIf="loggedIn" class="btn-2" (click)="deletePost(post.post_id)">Delete</button>
        </div>
      </div>
    </ng-container>
  </div>
</div>



