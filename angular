<button (click)="openModal()">Add Employee</button>

<!-- Employee Table -->
<table border="1">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>SALARY</th>
      <th>DEPARTMENT</th>
      <th>STATUS</th>
      <th>PHONENO</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <tr *ngFor="let employee of employees">
      <td>{{ employee.emp_ID }}</td>
      <td>{{ employee.e_NAME }}</td>
      <td>{{ employee.salary }}</td>
      <td>{{ employee.department }}</td>
      <td>{{ employee.status }}</td>
      <td>{{ employee.phoneno }}</td>
      <td>
        <button>Edit</button>
        <button (click)="deleteEmployee(employee.emp_ID)">Delete</button>
      </td>
    </tr>
  </tbody>
</table>

<!-- Modal (Hidden by Default) -->
<div class="modal" [ngClass]="{ 'show': showModal }">
  <div class="modal-content">
    <span class="close" (click)="closeModal()">&times;</span>
    <h2>Add Employee</h2>
    <form (submit)="addEmployee()">
      <label>Name:</label>
      <input type="text" [(ngModel)]="newEmployee.e_NAME" name="name" required />
      
      <label>Salary:</label>
      <input type="number" [(ngModel)]="newEmployee.salary" name="salary" required />

      <label>Department:</label>
      <input type="text" [(ngModel)]="newEmployee.department" name="department" required />

      <label>Status:</label>
      <select [(ngModel)]="newEmployee.status" name="status">
        <option value="Active">Active</option>
        <option value="Inactive">Inactive</option>
      </select>

      <label>Phone No:</label>
      <input type="text" [(ngModel)]="newEmployee.phoneno" name="phoneno" required />

      <button type="submit">Add Employee</button>
    </form>
  </div>
</div>

