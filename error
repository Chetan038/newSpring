this is my angular project for basic form validation 

app.component.ts

import { Component } from '@angular/core';
import { FormsModule } from '@angular/forms';
import { CommonModule } from '@angular/common';
//import { RouterOutlet } from '@angular/router';

@Component({
  selector: 'app-root',
 // imports: [RouterOutlet],
 standalone:true,
 imports : [FormsModule,CommonModule],
 
  templateUrl: './app.component.html',
  styleUrl: './app.component.css'
})
export class AppComponent {

  user={
      Name:'', 
      City:'',
      Phoneno:'',
      email:''
  };
  submitted =false;
  onSubmit(){
    this.submitted=true;
  }
  title = 'counter-app';
}


app.component.html
<h1>Form Validation</h1>
<div>
 
  <form (submit)="onSubmit()">
    
     <label>Name</label>    <input type="text" [(ngModel)]="user.Name" required><br>
     <label>City</label> City    :   <input type="text" [(ngModel)]="user.City" required><br>
     <label>Phoneno</label>Phoneno :  <input type="text" [(ngModel)]="user.Phoneno" required><br>
     <label>email</label>email   :   <input type="text" [(ngModel)]="user.email" required><br>
  <button type="submit">Submit</button>
  
   </form>
 
</div>

<div>
  <h1>Welcome, your details show below</h1><div>
    <div>
      <p *ngIf="submitted">Name    :   {{user.Name}}</p> <br>
      <p *ngIf="submitted">City    :   {{user.City}}</p><br>
      <p *ngIf="submitted">Phoneno :   {{user.Phoneno}}</p> <br>
      <p *ngIf="submitted">email   :   {{user.email}}</p> <br>
  
 
</div>
