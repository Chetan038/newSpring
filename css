  margin-right: 10px;
}

/* Assuming "Active" is a possible status - adjust these as needed */
tr:nth-child(odd) td:nth-child(5)::before {
  background-color: #4CAF50; /* Green for active */
}

tr:nth-child(even) td:nth-child(5)::before {
