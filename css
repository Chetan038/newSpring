  background: #5e35b1;
}

/* Adding a subtle pulse effect on page load */
@keyframes pulse {
  0% { box-shadow: 0 0 0 0 rgba(103, 58, 183, 0.4); }
  70% { box-shadow: 0 0 0 10px rgba(103, 58, 183, 0); }
  100% { box-shadow: 0 0 0 0 rgba(103, 58, 183, 0); }
}

.pulse {
  animation: pulse 2s infinite;
}

/* Apply pulse animation to table on page load */
table {
  animation: pulse 2s 1;
}

/* Adding tooltip style for showing additional info on hover */
td[title] {
  position: relative;
}

td[title]:hover::after {
  content: attr(title);
  position: absolute;
  bottom: 100%;
  left: 50%;
  transform: translateX(-50%);
  background: #673ab7;
  color: white;
  padding: 5px 10px;
  border-radius: 4px;
  font-size: 12px;
  white-space: nowrap;
  z-index: 2;
  opacity: 0;
  animation: fadeIn 0.3s forwards;
}

<h2>Employee List</h2>

<table border="1">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>SALARY</th>
      <th>DEPARTMENT</th>
      <th>STATUS</th>
      <th>PHONENO</th>
    </tr>
  </thead>
  <tbody>
    <tr *ngFor="let employee of employees">
      <td>{{ employee.emp_ID }}</td>
      <td>{{ employee.e_NAME }}</td>
      <td>{{ employee.salary }}</td>
      <td>{{ employee.department }}</td>
      <td>{{ employee.status }}</td>
      <td>{{ employee.phoneno }}</td>
    </tr>
  </tbody>
  
</table>


