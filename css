/* violet_employee_table.css */

table {
  width: 100%;
  border-collapse: collapse;
  margin: 20px 0;
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
  border-radius: 8px;
  overflow: hidden; /* Ensures rounded corners are applied */
}

thead {
  background-color: #9370DB; /* Medium Purple */
  color: white;
  text-align: left;
}

th, td {
  padding: 12px 15px;
  text-align: left;
  border-bottom: 1px solid #ddd;
}

th {
  font-weight: 600;
}

tbody tr:nth-child(even) {
  background-color: #f9f9f9;
}

tbody tr:hover {
  background-color: #E6E6FA; /* Light Lavender */
  transform: translateY(-2px); /* Slight pop effect */
  box-shadow: 0 6px 10px rgba(0, 0, 0, 0.15);
  transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
}

td {
  transition: background-color 0.3s ease;
}

/* Specific column styling (optional) */
td:nth-child(3) { /* Salary column */
  text-align: right;
  font-weight: 500;
  color: #6A5ACD; /* Slate Blue */
}

td:nth-child(4) { /* Department column */
  color: #800080; /* Purple */
}

/* Responsive adjustments */
@media (max-width: 768px) {
  table, thead, tbody, th, td, tr {
    display: block;
  }

  thead tr {
    position: absolute;
    top: -9999px;
    left: -9999px;
  }

  tr {
    border: 1px solid #ccc;
    margin-bottom: 10px;
  }

  td {
    border: none;
    border-bottom: 1px solid #eee;
    position: relative;
    padding-left: 50%;
    text-align: left;
  }

  td:before {
    position: absolute;
    top: 6px;
    left: 6px;
    width: 45%;
    padding-right: 10px;
    white-space: nowrap;
    content: attr(data-label);
    font-weight: bold;
  }

  /* Add data-label attributes to your HTML */
  td:nth-of-type(1):before { content: "ID"; }
  td:nth-of-type(2):before { content: "Name"; }
  td:nth-of-type(3):before { content: "SALARY"; }
  td:nth-of-type(4):before { content: "DEPARTMENT"; }
  td:nth-of-type(5):before { content: "STATUS"; }
  td:nth-of-type(6):before { content: "PHONENO"; }
}

/* Optional: Alternate row colors on smaller screens */
@media (max-width: 768px) {
  tr:nth-child(even) {
    background-color: #f9f9f9;
  }
}


