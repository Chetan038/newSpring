  cursor: pointer;
  font-weight: bold;
  box-shadow: 0 4px 10px rgba(255, 165, 0, 0.3);
  transition: transform 0.3s ease-in-out, background 0.3s;
}

/* Button Hover Effect */
.login-btn:hover {
